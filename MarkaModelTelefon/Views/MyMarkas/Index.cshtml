@model IEnumerable<MarkaModelTelefon.Models.MyMarka>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <h4 class="page-title">
            @*Başlık*@ Liste Sayfası
        </h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                @*Detay*@ Genel bilgi oluşumlarını buradan yönetebilirsiniz.
            </li>
        </ol>
    </div>
    <div class="col-sm-3">
        <div class="float-sm-right btn btn-success shadow-success">
            <i class="fa fa-plus"></i> @Html.ActionLink("Yeni Ekle", "Create")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow-dark">
            <div class="card-header"><i class="fa fa-book"></i> Bilgi içerikleri</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.MarkaAd)
                                </th>
                                <th scope="col" style="max-width:120px">
                                    İşlemler
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td scope="row">
                                        @Html.DisplayFor(modelItem => item.MarkaAd)
                                    </td>
                                    <td scope="row">
                                        <button class="btn btn-warning btn-sm shadow-warning btn-round">
                                            <i class="fa fa-edit"></i> @Html.ActionLink("Düzenle", "Edit", new { id = item.MarkaId })
                                        </button>
                                        <button class="btn btn-info btn-sm shadow-info btn-round">
                                            <i class="fa fa-info-circle"></i> @Html.ActionLink("Detaylar", "Details", new { id = item.MarkaId })
                                        </button>
                                        <button class="btn btn-danger btn-sm shadow-danger btn-round">
                                            <i class="fa fa-trash"></i> @Html.ActionLink("Sil", "Delete", new { id = item.MarkaId })
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
